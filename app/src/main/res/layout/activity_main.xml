<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.MainActivity">
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="482dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:id="@+id/recyclerView"
            android:layout_marginBottom="92dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btnRandomFacts"
            app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Random Facts"
            android:layout_width="126dp"
            android:layout_height="61dp"
            android:id="@+id/btnRandomFacts"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="143dp"
            android:layout_marginRight="143dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="142dp" android:layout_marginStart="142dp"/>
</android.support.constraint.ConstraintLayout>